// defines number of pixels of the whole screen
#define SCR_WIDTH  VRAM_WIDTH * 8   // 28 * 8 = 224 pixels
#define SCR_HEIGHT VRAM_HEIGHT * 8  // 30 * 8 = 240 pixels

// defines drawing area of 64 x 48 pixels
#define CANVASW     64
#define CANVASH     48
// image left top corner coordinates
#define XCORNER     ((SCR_WIDTH - CANVASW)/2)
#define YCORNER     ((SCR_HEIGHT - CANVASH)/2)

void setup() {
  // fills up the screen with tileID zero using red as foreground color over green as background color
  BlueBitmap::clearGraphScreen(vga.getColorCode(RGB_RED, RGB_GREEN));

  // Draws the image, based on the image[] array
  for (uint8_t x = 0; x < IMAGE_WIDTH; x++)
    for (uint8_t y = 0; y < IMAGE_HEIGHT; y++)
      if (image[x + IMAGE_WIDTH * y] == 1) BlueBitmap::drawPixel(x + XCORNER, y + YCORNER);
}

void loop() {
  // vga.waitVSynch() blocks the execution until a whole VGA frame has been fully drawn
  // this also make the VGA image to be clear and solid
  while (true) vga.waitVSync(); // Halts the execution for ever...
}

